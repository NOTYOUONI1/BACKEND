    flex-direction: column;
}
.main{
    height:38vh;
    width:15vw;
    background-color: aliceblue;
    box-shadow: 10px;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
}
img{
    height:200px;
    width:200px;
    border-radius: 50%;
    margin: 80px;
}
input{
    display: none;
}
label{
    height: 10%;
    width: 40%;
    background-color: aqua;
