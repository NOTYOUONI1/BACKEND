    <div class="main_back">
        <div class="main">
            <h1>Profile</h1>
            <img src="https://i.imghippo.com/files/at32G1714040578.webp" id="p-d">
            <label for="input-file">upload picture</label>
            <input type="file" id="input-file" accept="image/jpg, image/jpeg, image/png">
        </div>
        <div id="div-22">viwe code</div>
    </div>
    <script>
        // Get the button and body elements
const btn = document.querySelector('#div-22');
const body = document.querySelector('html');
let Npicture = document.querySelector('#input-file')
let Dpicture = document.querySelector('#p-d')

Npicture.addEventListener('change',()=>{
    Dpicture.src = URL.createObjectURL(Npicture.files[0])
})

// Add a click event listener to the button
btn.addEventListener('click', () => {
    // Log the inner HTML of the body to the console
    console.log(body.innerHTML);
    
    // Update the button text
    btn.innerText = "1. Right click\n2. Click inspect\n3. Open console";
    
    // Set the width of the button (corrected spelling)
    btn.style.width = '250px';
    btn.style.height = '75px';

    
});

